@model DayCare.Models.Child

@{
	ViewBag.Title = "Create";
}

<h2>Application Process</h2>
	@using (Html.BeginForm("Create", "Children", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
<fieldset>
	@Html.AntiForgeryToken()
	<div class="col-lg-6">
		<h4>Add Child Information</h4>
		<div class="row">
			@Html.HiddenFor(model => model.Parent_Id)
			<div class="col-lg-6">
				<label for="last">Identity Number<span>*</span></label>
				@Html.EditorFor(model => model.Child_Id, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="col-lg-6">
				<label for="fir">First Name<span>*</span></label>
				@Html.EditorFor(model => model.Child_Name, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="col-lg-6">
				<label for="last">Last Name<span>*</span></label>
				@Html.EditorFor(model => model.Child_LastName, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="col-lg-9">
				@Html.CheckBoxFor(model => model.AfterCare, new { htmlAttributes = new { @class = "form-control" } })
				<label for="fir">Do you need after care?<span></span></label>
			</div>
			<br />
			<div class="col-lg-6">
				<label for="Fir">Upload photo<span>*</span></label>
				<div>
					<input type="file" id="filelist" name="filelist" />
				</div>
			</div>
			<div class="col-lg-6">
				<label for="last">Upload Supporting Documents<span>*</span></label>
				<div>
					<input type="file" id="upload" name="upload" />
				</div>
			</div>
		</div>
	</div>
	<br />
	<br />
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Complete" class="btn btn-success" />
		</div>
	</div>	
	<div class="col-md-4">
		<br />
		<div>
			<text> <span style="color:red;">  @ViewBag.ErrorDate</span> </text>

		</div>
		<br />
		<div>
			<text> <span style="color:red;"> @ViewBag.ErrorData </span> </text>

		</div>
	</div>
</fieldset>

	}
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
