@model DayCare.Models.Child

@{
    ViewBag.Title = "FullScreen";
}
<h2>Application Documents</h2>
<hr />
<br />

<div class="table">

    @if (Model.Child_Ducuments != null)
    {
        var base64 = Convert.ToBase64String(Model.Child_Ducuments);
        var imgsrc = string.Format("data:application/pdf;base64,{0}", base64);
        <embed src='@imgsrc' height="700" width="100%" />
    }

</div>
<br />
<div class="row">
    <a href='@Url.Action("Accept", "Children", new { id = Model.Child_Id}, null)' class="btn btn-success">Accept</a>

    <a href='@Url.Action("Decline", "Children", new { id = Model.Child_Id }, null)' class="btn btn-danger">Decline</a>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
